<tr id="product-row-@Model.ProductID">
    <td class="font-medium">@Model.ProductName</td>
    <td>@Model.Category.CategoryName</td>
    <td><span class="bg-blue-100 text-blue-700 text-xs font-semibold px-2 py-0.5 rounded-full">@Model.ProductType</span></td>
    <td>@Model.ProductPrice</td>
    <td class="space-x-3">
        <!-- Nút Sửa (AJAX) -->
        <a asp-action="EditProduct" asp-controller="CompanyDashboard" asp-route-id="@Model.ProductID" class="text-blue-600 hover:underline text-sm">Sửa</a>
        <!-- Nút Xóa (AJAX) -->
        <button type="button" onclick="deleteProduct(@Model.ProductID)" class="text-red-600 hover:underline text-sm">Xóa</button>
    </td>
</tr>
