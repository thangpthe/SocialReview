@model SocialReview.ViewModels.CompanyViewModel
@{
    ViewData["Title"] = Model.CompanyProfile.CompanyName;
    Layout = "_Layout";
    var categories = ViewData["Categories"] as List<SocialReview.Models.Category> ?? new List<SocialReview.Models.Category>();
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@section Styles {
    <link rel="stylesheet" href="~/css/company-dashboard.css" asp-append-version="true" />
}

<div class="container mx-auto p-4 md:p-8">

    <!-- (Phần TempData và thông tin Company giữ nguyên) -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-lg" role="alert">
            <p class="font-bold">Thành công</p>
            <p>@TempData["SuccessMessage"]</p>
        </div>
    }

    <h1 class="text-3xl font-bold mb-8 font-poppins text-purple-700">Trang quản lý Doanh nghiệp</h1>

    <div class="stat-card mb-8">
        <!-- ... (Code hiển thị thông tin công ty giữ nguyên) ... -->
        <div class="flex flex-col md:flex-row items-center gap-6">
            <div class="flex-shrink-0">
                @if (!string.IsNullOrEmpty(Model.CompanyProfile.Logo))
                {
                    <img src="@Model.CompanyProfile.Logo" alt="Logo" class="w-24 h-24 md:w-32 md:h-32 rounded-lg object-cover border border-gray-200"
                         onerror="this.onerror=null; this.src='https://placehold.co/128x128/eee/333?text=?';">
                }
                else
                {
                    <div class="w-24 h-24 md:w-32 md:h-32 rounded-lg bg-purple-100 text-purple-600 flex items-center justify-center text-5xl font-bold">
                        @Model.CompanyProfile.CompanyName.Substring(0, 1)
                    </div>
                }
            </div>

            <div class="text-center md:text-left flex-grow">
                <h3 class="text-2xl font-bold font-poppins">@Model.CompanyProfile.CompanyName</h3>
                <p class="text-gray-600">@Model.CompanyProfile.Industry</p>
                <p class="text-gray-500 text-sm mt-2 max-w-xl">@Model.CompanyProfile.CompanyDescription</p>
            </div>

            <div class="flex-shrink-0">
                <a asp-action="EditProfile" asp-controller="CompanyDashboard"
                   class="btn btn-primary">
                    <i class="fas fa-pencil-alt mr-1"></i> Sửa Thông tin
                </a>
            </div>
        </div>
    </div>
    <!-- (Kết thúc phần thông tin Company) -->


    <div class="table-container">
        <div class="flex justify-between items-center p-4">
            <h2 class="text-2xl font-semibold font-poppins text-purple-700">Sản phẩm/Dịch vụ của tôi</h2>
            <a asp-action="CreateProduct" asp-controller="CompanyDashboard" class="btn btn-primary">
                <i class="fas fa-plus mr-1"></i> Thêm Sản phẩm
            </a>
        </div>

        <table>
            <thead>
                <!-- SỬA LỖI: Thêm 5 cột (TH) để khớp với _ProductRow và JS -->
                <tr>
                    <th>Tên Sản phẩm/DV</th>
                    <th>Danh mục</th>
                    <th>Loại</th>
                    <th>Giá</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="product-table-body">
                @if (Model.CompanyProducts.Any())
                {
                    @foreach (var product in Model.CompanyProducts)
                    {
                        <!-- SỬA LỖI: _ProductRow (đã sửa) sẽ render 5 cột (TD) -->
                        <partial name="_ProductRow" model="product" />
                    }
                }
                else
                {
                    <!-- SỬA LỖI: colspan="5" -->
                    <tr id="no-products-row">
                        <td colspan="5" class="text-center text-gray-500 py-4">Bạn chưa thêm sản phẩm/dịch vụ nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // (Constants và Helpers giữ nguyên)
        const modalOverlay = document.getElementById('product-modal-overlay');
        const modalTitle = document.getElementById('modal-title');
        const productForm = document.getElementById('product-form');
        const modalSubmitButton = document.getElementById('modal-submit-button');
        const modalErrorAlert = document.getElementById('modal-error-alert');
        const modalErrorList = document.getElementById('modal-error-list');
        const imgPreview = document.getElementById('current-product-image-preview');

        // Danh sách categories (từ ViewData)
        const categoriesList = @Html.Raw(Json.Serialize(categories.Select(c => new { categoryID = c.CategoryID, categoryName = c.CategoryName })));

        function showError(message, errors = []) { /* (Code giữ nguyên) */
            console.error('Error:', message, errors);
            if (!modalErrorAlert || !modalErrorList) {
                console.error("Không tìm thấy phần tử hiển thị lỗi modal!");
                alert(message + (errors.length > 0 ? "\n- " + errors.join("\n- ") : ""));
                return;
            }
            modalErrorList.innerHTML = '';
            if (errors && errors.length > 0) {
                errors.forEach(err => {
                    const li = document.createElement('li');
                    li.textContent = err;
                    modalErrorList.appendChild(li);
                });
            } else {
                const li = document.createElement('li');
                li.textContent = message;
                modalErrorList.appendChild(li);
            }
            modalErrorAlert.style.display = 'block';
        }
        function hideError() { /* (Code giữ nguyên) */
             if (modalErrorAlert && modalErrorList) {
                modalErrorList.innerHTML = '';
                modalErrorAlert.style.display = 'none';
            }
        }
        function escapeHTML(str) { /* (Code giữ nguyên) */
            if (str === null || str === undefined) return '';
            return String(str)
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;')
                .replace(/"/g, '&quot;')
                .replace(/'/g, '&#039;');
        }
        function closeModal() { /* (Code giữ nguyên) */
            modalOverlay.classList.remove('open');
            hideError();
        }

        // (Modal Functions - Cập nhật)
        function openCreateModal() {
            productForm.reset();
            document.getElementById('ProductID').value = "0";
            modalTitle.textContent = "Thêm Sản phẩm mới";
            modalSubmitButton.textContent = "Tạo mới";
            productForm.setAttribute('data-mode', 'create');
            imgPreview.src = ""; // Xóa ảnh preview
            hideError();
            modalOverlay.classList.add('open');
        }

        async function openEditModal(productId) {
            hideError();
            try {
                const response = await fetch(`/CompanyDashboard/GetProductDetails/${productId}`);
                const result = await response.json();

                if (!response.ok || !result || result.success === false) {
                    // CẬP NHẬT: 'result' từ GetProductDetails là object ViewModel
                    // nên không có thuộc tính 'success'
                    if (response.ok) {
                        // Điền dữ liệu (trường hợp thành công)
                        document.getElementById('ProductID').value = result.productID;
                        document.getElementById('ProductName').value = result.productName;
                        document.getElementById('ProductDescription').value = result.productDescription || '';
                        document.getElementById('ProductPrice').value = result.productPrice;
                        document.getElementById('ProductType').value = result.productType || '';
                        document.getElementById('CategoryID').value = result.categoryID;

                        // Cập nhật ảnh preview
                        imgPreview.src = result.productImage || "";

                        modalTitle.textContent = "Sửa Sản phẩm";
                        modalSubmitButton.textContent = "Lưu thay đổi";
                        productForm.setAttribute('data-mode', 'edit');
                        modalOverlay.classList.add('open');
                    } else {
                         throw new Error(result?.message || 'Không thể tải dữ liệu sản phẩm.');
                    }
                } else {
                    // (Giữ logic cũ phòng trường hợp server trả về { success: false })
                    throw new Error(result?.message || 'Không thể tải dữ liệu sản phẩm.');
                }
            } catch (error) {
                console.error('Lỗi khi mở modal sửa:', error);
                alert('Lỗi: ' + error.message);
            }
        }

        // CẬP NHẬT: Thêm event listener cho form submit
        productForm.addEventListener('submit', handleProductFormSubmit);

        // CẬP NHẬT LỚN: handleProductFormSubmit
        async function handleProductFormSubmit(event) {
            event.preventDefault();
            hideError();

            const mode = productForm.getAttribute('data-mode');
            const productId = document.getElementById('ProductID').value;
            const isCreating = (mode === 'create');
            const url = isCreating
                ? '/CompanyDashboard/CreateProduct'
                : `/CompanyDashboard/EditProduct/${productId}`;

            // CẬP NHẬT: Dùng FormData thay vì JSON
            const formData = new FormData();

            // Thêm các trường dữ liệu vào FormData
            formData.append('ProductID', productId);
            formData.append('ProductName', document.getElementById('ProductName').value.trim());
            formData.append('ProductDescription', document.getElementById('ProductDescription').value.trim() || '');
            formData.append('ProductPrice', parseFloat(document.getElementById('ProductPrice').value) || 0);
            formData.append('ProductType', document.getElementById('ProductType').value.trim() || '');
            formData.append('CategoryID', parseInt(document.getElementById('CategoryID').value) || 0);

            // Thêm file (nếu có)
            const fileInput = document.getElementById('ImageFile');
            if (fileInput.files.length > 0) {
                formData.append('ImageFile', fileInput.files[0]);
            }

            console.log('Đang gửi request (FormData):', { url, method: 'POST' });

            modalSubmitButton.disabled = true;
            modalSubmitButton.textContent = 'Đang xử lý...';

            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json'
                        // KHÔNG cần 'Content-Type', trình duyệt sẽ tự đặt
                        // là 'multipart/form-data' khi gửi FormData
                    },
                    body: formData // Gửi FormData
                });

                const result = await response.json();
                console.log('Response từ server:', result);

                if (!response.ok || !result.success) {
                    const errorMessage = result.message || 'Đã xảy ra lỗi không xác định';
                    const errors = result.errors || [];
                    throw { message: errorMessage, errors: errors };
                }

                // Thành công
                console.log('Thao tác thành công!', result.data);

                if (isCreating) {
                    appendTableRow(result.data);
                } else {
                    updateTableRow(result.data);
                }

                closeModal();
                // (Không cần alert, vì TempData sẽ hiển thị)
                // Thay vào đó, chúng ta reload lại trang để thấy TempData
                // Hoặc đơn giản là tin vào JS
                // alert(result.message || (isCreating ? 'Thêm sản phẩm thành công!' : 'Cập nhật sản phẩm thành công!'));

            } catch (error) {
                console.error('Lỗi khi submit form:', error);
                showError(error.message || 'Đã xảy ra lỗi', error.errors);
            } finally {
                modalSubmitButton.disabled = false;
                modalSubmitButton.textContent = isCreating ? 'Tạo mới' : 'Lưu thay đổi';
            }
        }

        // (Delete Function giữ nguyên)
        async function deleteProduct(productId) {
            if (!confirm('Bạn có chắc muốn xóa sản phẩm này?')) {
                return;
            }
            try {
                const response = await fetch(`/CompanyDashboard/DeleteProduct/${productId}`, {
                    method: 'DELETE',
                    headers: { 'Accept': 'application/json' }
                });
                const result = await response.json();
                if (!response.ok || !result.success) {
                    throw new Error(result.message || 'Không thể xóa sản phẩm.');
                }
                removeTableRow(productId);
                alert(result.message || 'Xóa sản phẩm thành công!');
            } catch (error) {
                console.error('Lỗi khi xóa:', error);
                alert('Lỗi: ' + error.message);
            }
        }

        // (Table Manipulation giữ nguyên)
        function appendTableRow(product) {
            console.log('Thêm row mới:', product);
            document.getElementById('no-products-row')?.remove();
            const tableBody = document.getElementById('product-table-body');
            const newRow = createRowHtml(product);
            tableBody.insertAdjacentHTML('beforeend', newRow);
        }
        function updateTableRow(product) {
            console.log('Cập nhật row:', product);
            const row = document.getElementById(`product-row-${product.productID}`);
            if (row) {
                row.outerHTML = createRowHtml(product);
            }
        }
        function removeTableRow(productId) {
            console.log('Xóa row ID:', productId);
            document.getElementById(`product-row-${productId}`)?.remove();
            const tableBody = document.getElementById('product-table-body');
            if (tableBody.childElementCount === 0) {
                tableBody.innerHTML = '<tr id="no-products-row"><td colspan="5" class="text-center text-gray-500 py-4">Bạn chưa thêm sản phẩm/dịch vụ nào.</td></tr>';
            }
        }

        // CẬP NHẬT: createRowHtml để khớp với 5 cột
        function createRowHtml(product) {
            // Xử lý tên Category
            let categoryName = 'N/A';
            // CẬP NHẬT: Đọc 'categoryName' trực tiếp từ 'product.categoryName' (server trả về)
            if (product.categoryName) {
                categoryName = product.categoryName;
            } else {
                 // Fallback tìm trong danh sách JS
                const category = categoriesList.find(c => c.categoryID === product.categoryID);
                if (category) {
                    categoryName = category.categoryName;
                }
            }

            // Xử lý giá
            const price = product.productPrice > 0
                ? `${product.productPrice.toLocaleString('vi-VN')} ₫`
                : 'Liên hệ';

            // Badge loại sản phẩm
            const typeBadge = `<span class="bg-blue-100 text-blue-700 text-xs font-semibold px-2 py-0.5 rounded-full">${escapeHTML(product.productType || 'N/A')}</span>`;

            // SỬA LỖI: Đảm bảo 5 cột (<td>) khớp với 5 cột (<th>)
            return `
                <tr id="product-row-${product.productID}">
                    <td class="font-medium">${escapeHTML(product.productName)}</td>
                    <td>${escapeHTML(categoryName)}</td>
                    <td>${typeBadge}</td>
                    <td>${price}</td>
                    <td class="space-x-3">
                        <button type="button" onclick="openEditModal(${product.productID})" class="text-blue-600 hover:underline text-sm">Sửa</button>
                        <button type="button" onclick="deleteProduct(${product.productID})" class="text-red-600 hover:underline text-sm">Xóa</button>
                    </td>
                </tr>
            `;
        }

        console.log('Script đã load, categories:', categoriesList);
    </script>
}