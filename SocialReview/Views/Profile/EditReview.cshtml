@model SocialReview.ViewModels.EditReviewViewModel
@{
    ViewData["Title"] = "Chỉnh sửa review";
}

<div class="container mx-auto p-4 md:p-8 max-w-4xl">
    <div class="mb-6">
        <a asp-action="Index" class="text-purple-600 hover:text-purple-800 flex items-center">
            <i class="fas fa-arrow-left mr-2"></i> Quay lại trang cá nhân
        </a>
    </div>

    <div class="bg-white p-6 md:p-8 rounded-lg shadow-md">
        <h1 class="text-3xl font-bold mb-6 font-poppins text-purple-700">Chỉnh sửa review</h1>

        <div class="mb-4 p-4 bg-purple-50 rounded-md">
            <p class="text-sm text-gray-600">Sản phẩm đang đánh giá:</p>
            <p class="font-semibold text-lg text-purple-700">@Model.ProductName</p>
        </div>

        <form asp-action="EditReview" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ReviewID" />
            <input type="hidden" asp-for="ProductID" />

            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4"></div>

            <!-- Title -->
            <div class="mb-6">
                <label asp-for="Title" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="Title" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="VD: Sản phẩm tuyệt vời!">
                <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
            </div>

            <!-- Rating -->
            <div class="mb-6">
                <label class="block text-gray-700 font-semibold mb-2">Điểm đánh giá</label>
                <div class="flex items-center gap-2">
                    <div class="rating-stars text-3xl">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="fa-star cursor-pointer transition-colors @(i <= Model.Rating ? "fas text-yellow-500" : "far text-gray-300")"
                               data-rating="@i"
                               onclick="setRating(@i)"></i>
                        }
                    </div>
                    <span id="ratingText" class="text-gray-600 ml-2">(@Model.Rating/5)</span>
                </div>
                <input type="hidden" asp-for="Rating" id="ratingInput" />
                <span asp-validation-for="Rating" class="text-red-600 text-sm"></span>
            </div>

            <!-- Content -->
            <div class="mb-6">
                <label asp-for="Content" class="block text-gray-700 font-semibold mb-2"></label>
                <textarea asp-for="Content" rows="8" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="Chia sẻ trải nghiệm của bạn về sản phẩm..."></textarea>
                <span asp-validation-for="Content" class="text-red-600 text-sm"></span>
            </div>

            <!-- Current Images -->
            @if (Model.CurrentImages != null && Model.CurrentImages.Any())
            {
                <div class="mb-6">
                    <label class="block text-gray-700 font-semibold mb-2">Hình ảnh hiện tại</label>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4" id="currentImagesGrid">
                        @for (int i = 0; i < Model.CurrentImages.Count; i++)
                        {
                            <div class="relative group">
                                <img src="@Model.CurrentImages[i]" alt="Review image" class="w-full h-32 object-cover rounded-md">
                                <button type="button"
                                        class="absolute top-2 right-2 bg-red-600 text-white rounded-full w-8 h-8 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
                                        onclick="markImageForDeletion(@i, '@Model.CurrentImages[i]')"
                                        title="Xóa ảnh này">
                                    <i class="fas fa-times"></i>
                                </button>
                                <input type="checkbox" name="ImagesToDelete" value="@i" class="hidden image-delete-checkbox" id="deleteImg@i">
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- New Images -->
            <div class="mb-6">
                <label class="block text-gray-700 font-semibold mb-2">Thêm hình ảnh mới</label>
                <div class="border-2 border-dashed border-gray-300 rounded-md p-6 text-center hover:border-purple-500 transition-colors">
                    <label class="cursor-pointer">
                        <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-2"></i>
                        <p class="text-gray-600 mb-2">Click để chọn ảnh hoặc kéo thả vào đây</p>
                        <p class="text-sm text-gray-500">Hỗ trợ: JPG, PNG, GIF (Tối đa 5 ảnh)</p>
                        <input type="file" asp-for="NewImages" multiple accept="image/*" class="hidden" id="newImagesInput" onchange="previewNewImages(this)">
                    </label>
                </div>
                <div id="newImagesPreview" class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4"></div>
            </div>

            <!-- Submit Buttons -->
            <div class="flex gap-4 mt-8">
                <button type="submit" class="flex-1 bg-purple-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-purple-700 transition-colors">
                    <i class="fas fa-save mr-2"></i>Lưu thay đổi
                </button>
                <a asp-action="Index" class="flex-1 text-center bg-gray-300 text-gray-700 px-6 py-3 rounded-md font-semibold hover:bg-gray-400 transition-colors">
                    Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Rating functionality
        function setRating(rating) {
            document.getElementById('ratingInput').value = rating;
            document.getElementById('ratingText').textContent = '(' + rating + '/5)';

            const stars = document.querySelectorAll('.rating-stars i');
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.remove('far', 'text-gray-300');
                    star.classList.add('fas', 'text-yellow-500');
                } else {
                    star.classList.remove('fas', 'text-yellow-500');
                    star.classList.add('far', 'text-gray-300');
                }
            });
        }

        // Mark image for deletion
        function markImageForDeletion(index, imagePath) {
            const checkbox = document.getElementById('deleteImg' + index);
            const imageDiv = checkbox.parentElement;

            if (checkbox.checked) {
                checkbox.checked = false;
                imageDiv.classList.remove('opacity-50');
            } else {
                checkbox.checked = true;
                imageDiv.classList.add('opacity-50');
            }
        }

        // Preview new images
        function previewNewImages(input) {
            const previewContainer = document.getElementById('newImagesPreview');
            previewContainer.innerHTML = '';

            if (input.files) {
                Array.from(input.files).forEach((file, index) => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const div = document.createElement('div');
                        div.className = 'relative';
                        div.innerHTML = `
                            <img src="${e.target.result}" class="w-full h-32 object-cover rounded-md">
                            <span class="absolute top-2 left-2 bg-green-600 text-white text-xs px-2 py-1 rounded">Mới</span>
                        `;
                        previewContainer.appendChild(div);
                    }
                    reader.readAsDataURL(file);
                });
            }
        }
    </script>
}