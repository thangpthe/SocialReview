<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Trustify</title>

    <!-- SEO Meta -->
    <meta name="description" content="Trustify - Nền tảng đánh giá sản phẩm và dịch vụ trung thực giúp bạn đưa ra quyết định thông minh." />
    <meta name="keywords" content="Trustify, review, đánh giá, sản phẩm, dịch vụ, công ty" />
    <meta name="author" content="Trustify Team" />

   
    <!-- Font Awesome -->
    <link href="~/lib/fontawesome-free-7.1.0-web/css/all.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body>
    <!-- HEADER -->
    <header>
        <div class="container">
            <nav>
                <div class="nav-left">
                    <a class="brand" asp-controller="Home" asp-action="Index">Trustify</a>
                    <div class="search-bar">
                        <input type="text" placeholder="Tìm kiếm sản phẩm, dịch vụ..." />
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div>
                </div>

                <div class="nav-right">
                    <a class="btn-login" asp-controller="Auth" asp-action="Login">Đăng nhập</a>
                    <a class="btn-signup" asp-controller="Auth" asp-action="Register">Đăng ký</a>
                </div>
            </nav>
        </div>
    </header>

    <!-- MAIN -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="grid">
                <div>
                    <h4>Trustify</h4>
                    <p>Đọc đánh giá đáng tin cậy để đưa ra quyết định mua hàng thông minh hơn.</p>
                </div>

                <div>
                    <h5>Liên kết nhanh</h5>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li><a asp-controller="Review" asp-action="Index">Đánh giá</a></li>
                        <li><a asp-controller="Company" asp-action="Index">Doanh nghiệp</a></li>
                    </ul>
                </div>

                <div>
                    <h5>Danh mục</h5>
                    <ul>
                        <li><a href="#">Sản phẩm</a></li>
                        <li><a href="#">Dịch vụ</a></li>
                    </ul>
                </div>

                <div>
                    <h5>Liên hệ</h5>
                    <ul>
                        <li><a href="mailto:support@trustify.com">support@trustify.com</a></li>
                        <li><a href="#">+84 999 999 999</a></li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <img src="~/images/logo.png" alt="Trustify" width="40" loading="lazy" />
                © 2025 Trustify. All rights reserved.
            </div>
        </div>
    </footer>
</body>
</html>
