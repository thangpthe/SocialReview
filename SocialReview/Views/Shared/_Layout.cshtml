
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@500;600&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #F9F6FB;
            color: #212121;
            margin: 0;
            padding: 0;
        }

        /* Navbar */
        .navbar {
            background-color: white;
            box-shadow: 0 1px 6px rgba(0, 0, 0, 0.08);
        }

        .navbar-brand {
            color: #6A1B9A;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            font-size: 1.4rem;
        }

        .nav-link {
            color: #424242;
            font-weight: 500;
            margin: 0 8px;
        }

        .nav-link:hover {
            color: #6A1B9A;
        }

        .btn-login {
            color: #6A1B9A;
            border: 1px solid #6A1B9A;
            background-color: transparent;
            padding: 6px 14px;
            border-radius: 6px;
            width: max-content;
            font-weight: 500;
        }

        .btn-signup {
            background-color: #6A1B9A;
            color: white;
            padding: 6px 14px;
            border-radius: 6px;
            font-weight: 500;
            margin-left: 10px;
        }

        /* Main content */
        main {
            min-height: 70vh;
            padding-top: 40px;
            padding-bottom: 40px;
        }

        /* Footer */
        footer {
            background-color: #6A1B9A;
            color: #fff;
            padding: 50px 0 20px 0;
            font-size: 0.95rem;
        }

        footer h5 {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        footer a {
            color: #E1BEE7;
            text-decoration: none;
        }

        footer a:hover {
            color: white;
        }

        .footer-bottom {
            text-align: center;
            border-top: 1px solid rgba(255,255,255,0.2);
            margin-top: 20px;
            padding-top: 15px;
            font-size: 0.9rem;
            color: #E1BEE7;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Trustify</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="form-control">
                    <input class="form-input" type="text" placeholder="Tìm kiếm sản phẩm"/>
                    <i class="fa-solid fa-magnifying-glass"></i>
                </div>
                <ul class="navbar-nav align-items-center">
                    
                    <li class="nav-item">
                        <a class="btn btn-login" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                    </li>
                    
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>Trustify</h5>
                    <p>Read trusted reviews to make smarter buying decisions.</p>
                </div>
                <div class="col-md-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Review" asp-action="Index">Reviews</a></li>
                        <li><a asp-controller="Company" asp-action="Index">Companies</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Categories</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Electronics</a></li>
                        <li><a href="#">Fashion</a></li>
                        <li><a href="#">Food & Beverage</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Contact</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">support@trustify.com</a></li>
                        <li><a href="#">+84 999 999 999</a></li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                © 2025 Trustify. All rights reserved.
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
