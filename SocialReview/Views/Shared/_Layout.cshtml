@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Trustify</title>

    <meta name="description" content="Trustify - Nền tảng đánh giá sản phẩm và dịch vụ trung thực giúp bạn đưa ra quyết định thông minh." />
    <meta name="keywords" content="Trustify, review, đánh giá, sản phẩm, dịch vụ, công ty" />
    <meta name="author" content="Trustify Team" />

    <link rel="icon" href="~/images/logo.ico" type="image/x-icon" />
    <link href="~/lib/fontawesome-free-7.1.0-web/css/all.min.css" rel="stylesheet">
    @* <script src="https://cdn.tailwindcss.com"></script> *@

    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body data-is-authenticated="@(User.Identity.IsAuthenticated.ToString().ToLower())">
    <header>
        <div class="container">
            <nav>
                <div class="nav-left">
                    <a class="brand" asp-controller="Home" asp-action="Index">Trustify</a>
                    <form class="search-bar" asp-controller="Search" asp-action="Index" method="get">
                        <input type="text" name="query" placeholder="Tìm kiếm sản phẩm, dịch vụ..." />
                        <button type="submit" class="search-submit">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </form>
                </div>

                <div class="nav-right">

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="user-menu-container">
                            <button type="button" class="user-menu-trigger">
                                Xin chào, <strong>@User.Identity.Name</strong>!
                                <i class="fa-solid fa-chevron-down fa-xs"></i>
                            </button>

                            <div class="user-menu-dropdown">
                                @if (User.IsInRole("Company"))
                                {
                                    <a asp-controller="CompanyDashboard" asp-action="Index">
                                        <i class="fa-solid fa-building fa-fw"></i> Trang Doanh nghiệp
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Profile" asp-action="Index">
                                        <i class="fa-solid fa-user fa-fw"></i> Trang cá nhân
                                    </a>
                                }

                                <hr class="dropdown-divider" />

                                <form asp-controller="Auth" asp-action="Logout" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item-logout">
                                        <i class="fa-solid fa-right-from-bracket fa-fw"></i> Đăng xuất
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a class="btn-login" asp-controller="Auth" asp-action="Login">Đăng nhập</a>
                        <a class="btn-signup" asp-controller="Auth" asp-action="Register">Đăng ký</a>
                    }

                </div>
            </nav>
        </div>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year Trustify. All rights reserved.</p>
            <nav>
                <ul>
                    <li><a asp-controller="Home" asp-action="About">Giới thiệu</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy">Chính sách Bảo mật</a></li>
                    <li><a asp-controller="Home" asp-action="Terms">Điều khoản Dịch vụ</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                </ul>
            </nav>
        </div>
    </footer>

    @* <script src="~/js/product-detail.js" asp-append-version="true"></script> *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>