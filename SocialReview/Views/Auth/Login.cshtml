@model SocialReview.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}
<!-- Thêm TagHelper để dùng asp-for, asp-validation... -->
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập - Trustify</title>

    <!-- Font + CSS -->
    <link rel="stylesheet" href="~/css/auth.css" />
    <style>
        /* Thêm style cho phần hiển thị lỗi validation */
        .auth-form .validation-summary-errors {
            color: #dc3545; /* Màu đỏ bootstrap */
            list-style: none;
            padding: 0;
            margin-bottom: 1rem;
            text-align: left;
            font-size: 0.9rem;
        }
        .auth-form .field-validation-error {
            color: #dc3545;
            font-size: 0.85rem;
            display: block;
            margin-top: 4px;
        }
    </style>
</head>
<body>
    <section class="auth-section">
        <div class="auth-container">
            <h2>Đăng nhập</h2>
            <p>Chào mừng trở lại với <strong>Trustify</strong></p>

            <form method="post" class="auth-form" asp-action="Login">

                <!-- Hiển thị lỗi chung (ví dụ: "Tên tài khoản hoặc mật khẩu không đúng") -->
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <!-- SỬA 1: Đổi Email thành Username -->
                <div class="form-group">
                    <label asp-for="Username">Tên tài khoản</label>
                    <input asp-for="Username" type="text" required placeholder="Nhập tên tài khoản" />
                    <span asp-validation-for="Username" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Mật khẩu</label>
                    <input asp-for="Password" type="password" required placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <button type="submit" class="btn-primary">Đăng nhập</button>

                <div class="auth-links">
                    <a asp-action="ForgotPassword" asp-controller="Account">Quên mật khẩu?</a>
                    <p>Chưa có tài khoản? <a asp-action="Register" asp-controller="Auth">Đăng ký</a></p>
                </div>
            </form>
        </div>
    </section>
</body>
</html>

