@model SocialReview.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Tổng quan";
    Layout = "_AdminLayout";
}
<!-- SECTION: TỔNG QUAN (dashboard) -->
<section id="dashboard-content" class="space-y-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="stat-card p-6 flex items-center gap-4">
            <div class="bg-blue-100 text-blue-600 p-3 rounded-full">
                <i class="fa-solid fa-users fa-lg"></i>
            </div>
            <div>
                <p class="text-sm text-gray-500">Tổng User</p>
                <p class="text-2xl font-semibold">@Model.TotalUsers</p>
            </div>
        </div>
        <div class="stat-card p-6 flex items-center gap-4">
            <div class="bg-green-100 text-green-600 p-3 rounded-full">
                <i class="fa-solid fa-star fa-lg"></i>
            </div>
            <div>
                <p class="text-sm text-gray-500">Tổng Review</p>
                <p class="text-2xl font-semibold">@Model.TotalReviews</p>
            </div>
        </div>
       
    </div>
</section>

